# ReparagymStore Backend Environment Variables

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/reparagymstore

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Medusa Configuration
NODE_ENV=development
BACKEND_URL=http://localhost:9000
SERVER_URL=http://localhost:9000

# CORS Configuration
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:7001
AUTH_CORS=http://localhost:3000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Admin Configuration
DISABLE_MEDUSA_ADMIN=false

# Worker Configuration
MEDUSA_WORKER_MODE=shared

# MeiliSearch Configuration
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key

# Mexican Market Configuration
DEFAULT_CURRENCY=MXN
DEFAULT_REGION=mexico
DEFAULT_LANGUAGE=es

# Payment Configuration (Mercado Pago)
MERCADO_PAGO_ACCESS_TOKEN=your_mp_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mp_public_key
MERCADO_PAGO_WEBHOOK_SECRET=your_mp_webhook_secret

# Shipping Configuration
FEDEX_ACCOUNT_NUMBER=your_fedex_account
FEDEX_METER_NUMBER=your_fedex_meter
UPS_ACCESS_LICENSE=your_ups_license
ESTAFETA_USER=your_estafeta_user
ESTAFETA_PASSWORD=your_estafeta_password

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# File Upload Configuration
UPLOAD_DIR=uploads

# Logging Configuration
LOG_LEVEL=debug

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id